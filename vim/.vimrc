set nocompatible

filetype indent plugin on

syntax on
set nowrap
set encoding=utf8

set ignorecase
set smartcase
set autoindent
set ruler

set number
set relativenumber

set shiftwidth=4
set softtabstop=4
set smartindent
set expandtab

set cursorline

" plug
call plug#begin('~/.vim/plugged')

call plug#end()